
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
<div class="free_shipping--wrapper section-{{ section.id }}-padding">
  <div class="page-width"> <div class="free_shipping--main grid grid--1-col-tablet-down grid--3-col-desktop">
    {% for block in section.blocks %}
      <div class="free_shipping--item image--alignment-{{ block.settings.image_align }} grid__item" style="background-color:{{ block.settings.bg_color }};{% if block.settings.linear_bg != blank %}background:linear-gradient({{ block.settings.linear_bg }}){% endif %}" >
        {% if block.settings.image != blank %}
        <div class="free_shipping-img">
          {{ block.settings.image | image_url: width: 250 | image_tag: loading:'lazy',class:'img' }}
        </div>
        {% endif %}  
        <div class="fre_Shipping-content">
          <div class="fre_Shipping-text">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
             <span>{{ block.settings.text }}</span>
           {% endif %}
          </div>
          {% if block.settings.button_label != blank %}
            <a {% if block.settings.button_link != blank %}href="{{ block.settings.button_link  }}"{% endif %} class="button button-primary free_Shipping-btn">{{ block.settings.button_label }}</a>
          {% endif %}
         </div>
      </div>
    {% endfor %}
  </div></div>
</div>
</div>
{% schema %}
  {
    "name": "Home Shipping Contact",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info",
        "default": "scheme-1"
      },
       {
      "type": "header",
      "content": "Section Padding Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
    ],
    "blocks": [
      {
        "type": "block",
        "name":"block",
        "limit": 3,
        "settings": [
          {
            "type": "select",
            "id": "image_align",
            "label": "Image Alignment",
            "options": [
              {
                "label": "Left",
                "value": "left"
              },
              {
                "label": "Right",
                "value": "right"
              }
            ]
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button Label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "BackGround Color"
          },
          {
            "type": "text",
            "id": "linear_bg",
            "label": "Linear Background"
          }  
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Shipping Contact"
      }
    ]
  }
{% endschema %} 