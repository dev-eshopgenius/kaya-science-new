{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="highlights-section-wrap color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding page-width">
    {% if section.blocks.size != 0 %}
      <div class="icon-with-text-wrap">
        <div class="highlights-slider-wrap">
          {%- for block in section.blocks -%}
            <div class="icon_text_loop slider-text">
              <div class="icon_text_inner ">
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" class="icon_link">
                {% endif %}
                {% if block.settings.icon != blank %}
                  <div class="icon">
                    {{ block.settings.icon | image_url: width: 100 | image_tag: loading: 'lazy', class: 'icon' }}
                  </div>
                {% endif %}
                {% if block.settings['icon-text'] != blank %}
                  <div class="icon_text">{{ block.settings['icon-text'] }}</div>
                {% endif %}
                {% if block.settings.link != blank %}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Highlights",
  "class": "hightlights-section section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "icon-with-text",
      "name": "Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "icon-text",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Highlights",
      "blocks": [
        {
          "type": "icon-with-text"
        }
      ]
    }
  ]
}
{% endschema %}
