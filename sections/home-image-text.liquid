{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient isolate home-iwt-section {{ section.settings.classname }}">
  <div class="page-width section-{{ section.id }}-padding home-iwt-container">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="home-iwt__content-wrapp">
      <div class="section-content-items grid grid--2-col-desktop grid--1-col-tablet-down">
        {%- capture image_content -%} 
        {% if section.settings.image != blank or section.settings.mobimage != blank %}
          <div class="image-wrapper grid__item">
          {% if section.settings.image != blank %}
            {{ section.settings.image | image_url: width: section.settings.image.width, height: section.settings.image.height | image_tag: loading:'lazy', class:'desk-image' }}
          {% endif %}
          {% if section.settings.mobimage != blank %}
            {{ section.settings.mobimage | image_url: width: section.settings.mobimage.width, height: section.settings.mobimage.height | image_tag: loading:'lazy', class:'mob-image' }}
          {% endif %}
          </div>
          {% endif %}
        {%- endcapture -%}

        {% if section.settings.layout == 'image_first' %}
          {{ image_content }}
        {% endif %}
        <div class="content-wrapper grid__item">
          {% if section.settings.content != blank %}
            <div class="content">
              {{ section.settings.content }}
            </div>
          {% endif %}
          {% if section.settings.label_text != blank %}
            <div class="label_text">
              {{ section.settings.label_text }}
            </div>
          {% endif %}
          <div class="block-content-wrap">
            {% for block in section.blocks %}
              <div class="icon-text-items icons{{ forloop.index }}--wrapp">
                {% for i in (1..2) %}
                  {%- capture icon -%}icon{{ i }}{%- endcapture -%}
                  {%- capture text -%}text{{ i }}{%- endcapture -%}

                  {% if block.type == 'icon_text' %}
                    {% if block.settings[icon] != blank or block.settings[text] != blank %}
                      <div class="wrapper">
                        {% if block.settings[icon] != blank %}
                          {{ block.settings[icon] | image_url: width: 50 | image_tag: loading: 'lazy', class: 'icon' }}
                        {% endif %}
                        {% if block.settings[text] != blank %}
                          <span class="text">{{ block.settings[text] }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </div>
            {% endfor %}
          </div>
        </div>
        {% if section.settings.layout == 'text_first' %}
          {{ image_content }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home Image with Text",
  "settings": [
    {
      "type": "text",
      "id": "classname",
      "label": "ClassName"
    },
      {
    "type": "inline_richtext",
    "id": "heading",
    "default": "t:sections.collage.settings.heading.default",
    "label": "t:sections.collage.settings.heading.label"
  },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobimage",
      "label": "Mobile Image"
    },
        {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "t:sections.image-with-text.settings.layout.options__1.label"
        },
        {
          "value": "text_first",
          "label": "t:sections.image-with-text.settings.layout.options__2.label"
        }
      ],
      "default": "image_first",
      "label": "t:sections.image-with-text.settings.layout.label",
      "info": "t:sections.image-with-text.settings.layout.info"
    },
     {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
     {
      "type": "html",
      "id": "label_text",
      "label": "Label"
    },
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "t:sections.all.colors.label",
    "info": "t:sections.all.colors.has_cards_info",
    "default": "scheme-1"
  },
  {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
  ],
  "blocks": [
    {
      "type": "icon_text",
      "name":"Content",
      "settings": [
         {
          "type": "header",
          "content": "First Content"
        },
        {
          "type": "image_picker",
          "id": "icon1",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "text1",
          "label": "Text"
        },
        {
          "type": "header",
          "content": "Second Content"
        },
         {
          "type": "image_picker",
          "id": "icon2",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "text2",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Image with Text"
    }
  ]
}
{% endschema %}
